  <property name="project.jdk.home" value="${jdk.home.idea_sdk}"/>
  <property name="project.jdk.bin" value="${jdk.bin.idea_sdk}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.idea_sdk"/>
  
  
  <!-- Project Libraries -->

  <property name="core.basedir" value="${basedir}/../de.fu_berlin.inf.dpp.core"/>
  <property name="core.libdir" value="${core.basedir}/lib"/>
  <path id="libraries.classpath">
    <pathelement location="${core.libdir}/commons-codec-1.3.jar"/>
    <pathelement location="${core.libdir}/commons-io-2.0.1.jar"/>
    <pathelement location="${core.libdir}/commons-lang-2.4.jar"/>
    <pathelement location="${core.libdir}/log4j-1.2.15.jar"/>
    <pathelement location="${core.libdir}/picocontainer-2.11.2.jar"/>
    <pathelement location="${core.libdir}/smack-3.4.1-0cec571.jar"/>
    <pathelement location="${core.libdir}/smackx-debug-3.4.1-0cec571.jar"/>
    <pathelement location="${core.libdir}/smackx-3.4.1-0cec571.jar"/>
    <pathelement location="${core.libdir}/weupnp.jar"/>
    <pathelement location="${core.libdir}/xpp3-1.1.4c.jar"/>
    <pathelement location="${core.libdir}/xstream-1.4-20101008.163445-1.jar"/>
  </path>

  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module core -->
  
  <dirname property="module.core.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.core" value="${jdk.home}"/>
  <property name="module.jdk.bin.core" value="${jdk.bin}"/>
  <property name="module.jdk.classpath.core" value="jdk.classpath"/>
  
  <property name="compiler.args.core" value="${compiler.args}"/>
  
  <property name="core.output.dir" value="${module.core.basedir}/bin/production/core"/>
  <property name="core.testoutput.dir" value="${module.core.basedir}/bin/test/core"/>
  
  <path id="core.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="core.module.production.classpath">
    <path refid="${module.jdk.classpath.core}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  <path id="core.runtime.production.module.classpath">
    <pathelement location="${core.output.dir}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  <path id="core.module.classpath">
    <path refid="${module.jdk.classpath.core}"/>
    <pathelement location="${core.output.dir}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  <path id="core.runtime.module.classpath">
    <pathelement location="${core.testoutput.dir}"/>
    <pathelement location="${core.output.dir}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.core">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.core">
    <patternset refid="excluded.from.module.core"/>
  </patternset>
  
  <path id="core.module.sourcepath">
    <dirset dir="${module.core.basedir}/../de.fu_berlin.inf.dpp.core">
      <include name="src"/>
      <include name="patches"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.core" depends="compile.module.core.production,compile.module.core.tests" description="Compile module core"/>
  
  <target name="compile.module.core.production" depends="register.custom.compilers" description="Compile module core; production classes">
    <mkdir dir="${core.output.dir}"/>
    <javac2 destdir="${core.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.core}/javac">
      <compilerarg line="${compiler.args.core}"/>
      <bootclasspath refid="core.module.bootclasspath"/>
      <classpath refid="core.module.production.classpath"/>
      <src refid="core.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.core"/>
    </javac2>
    
    <copy todir="${core.output.dir}">
      <fileset dir="${module.core.basedir}/../de.fu_berlin.inf.dpp.core/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.core.basedir}/../de.fu_berlin.inf.dpp.core/patches">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.core.tests" depends="register.custom.compilers,compile.module.core.production" description="compile module core; test classes" unless="skip.tests"/>
  
  <target name="clean.module.core" description="cleanup module">
    <delete dir="${core.output.dir}"/>
    <delete dir="${core.testoutput.dir}"/>
  </target>
  
  
  <!-- Module intellij -->
  
  <dirname property="module.intellij.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.intellij" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.intellij" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.intellij" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.intellij" value="${compiler.args}"/>
  
  <property name="intellij.output.dir" value="${module.intellij.basedir}/bin/production/intellij"/>
  <property name="intellij.testoutput.dir" value="${module.intellij.basedir}/bin/test/intellij"/>
  <property name="intellij.artifacts.dir" value="${module.intellij.basedir}/bin/artifacts/intellij"/>

  <path id="intellij.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="intellij.module.production.classpath">
    <path refid="${module.jdk.classpath.intellij}"/>
    <pathelement location="${core.output.dir}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  <path id="intellij.runtime.production.module.classpath">
    <pathelement location="${intellij.output.dir}"/>
    <path refid="core.runtime.production.module.classpath"/>
  </path>
  
  <path id="intellij.module.classpath">
    <path refid="${module.jdk.classpath.intellij}"/>
    <pathelement location="${intellij.output.dir}"/>
    <pathelement location="${core.testoutput.dir}"/>
    <pathelement location="${core.output.dir}"/>
    <path refid="libraries.classpath"/>
  </path>
  
  <path id="intellij.runtime.module.classpath">
    <pathelement location="${intellij.testoutput.dir}"/>
    <pathelement location="${intellij.output.dir}"/>
    <path refid="core.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.intellij">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.intellij">
    <patternset refid="excluded.from.module.intellij"/>
  </patternset>
  
  <path id="intellij.module.sourcepath">
    <dirset dir="${module.intellij.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.intellij" depends="compile.module.intellij.production,compile.module.intellij.tests" description="Compile module intellij"/>
  
  <target name="compile.module.intellij.production" depends="register.custom.compilers,compile.module.core" description="Compile module intellij; production classes">
    <mkdir dir="${intellij.output.dir}"/>
    <javac2 destdir="${intellij.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.intellij}/javac">
      <compilerarg line="${compiler.args.intellij}"/>
      <bootclasspath refid="intellij.module.bootclasspath"/>
      <classpath refid="intellij.module.production.classpath"/>
      <src refid="intellij.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.intellij"/>
    </javac2>
    
    <copy todir="${intellij.output.dir}">
      <fileset dir="${module.intellij.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.intellij.tests" depends="register.custom.compilers,compile.module.intellij.production" description="compile module intellij; test classes" unless="skip.tests"/>
  
  <target name="clean.module.intellij" description="cleanup module">
    <delete dir="${intellij.output.dir}"/>
    <delete dir="${intellij.testoutput.dir}"/>
  </target>
  
  <property name="intellij.plugin.path.jar" value="${intellij.artifacts.dir}/intellij.jar"/>
  
  <!-- Build archive for plugin 'intellij' -->
  <target name="plugin.build.jar.intellij" depends="compile.module.intellij" description="Build plugin archive for module &#39;intellij&#39;">
    <jar destfile="${intellij.plugin.path.jar}" duplicate="preserve">
      <zipfileset dir="${module.intellij.basedir}/bin/production/intellij"/>
      <zipfileset file="${module.intellij.basedir}/META-INF/plugin.xml" prefix="META-INF"/>
      <manifest>
        <attribute name="Created-By" value="IntelliJ IDEA"/>
        <attribute name="Manifest-Version" value="1.0"/>
      </manifest>
    </jar>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.core, clean.module.intellij" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.core, plugin.build.jar.intellij" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>