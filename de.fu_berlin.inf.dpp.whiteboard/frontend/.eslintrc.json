{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "google",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "react/prop-types": 0
  }
}
